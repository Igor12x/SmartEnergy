<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brancoazulado"
    tools:context=".Tela_Criar_Nova_Senha">

    <TextView
        android:id="@+id/txtNvSenhaTitulo"
        android:layout_width="313dp"
        android:layout_height="47dp"
        android:layout_marginTop="112dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/txtNvSenhaTitulo"
        android:textColor="@color/lazul_marinho"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/txtNvSenhaDsc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.371" />

    <TextView
        android:id="@+id/txtNvSenhaDsc"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:fontFamily="@font/montserrat_bold"

        android:text="@string/txtNvSenhaDsc"
        android:textColor="@color/lazul_marinho"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.396"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="336dp" />

    <Button
        android:id="@+id/btnCfmSenha"
        android:layout_width="312dp"
        android:layout_height="54dp"
        android:layout_marginBottom="244dp"
        android:backgroundTint="@color/lazul_marinho"
        android:text="@string/btnCfmSenha"
        android:textColor="@color/lbranco"
        app:cornerRadius="47dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtConfirmeSenhaRecuperar"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/btnVoltaNovaSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icone_seta" />

    <EditText
        android:id="@+id/txtSenhaRecuperar"
        android:layout_width="303dp"
        android:layout_height="51dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/borda_edit_text_azul"
        android:ems="10"
        android:hint="@string/plainSenha"
        android:inputType="textPersonName|textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNvSenhaDsc" />

    <EditText
        android:id="@+id/txtConfirmeSenhaRecuperar"
        android:layout_width="304dp"
        android:layout_height="47dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/borda_edit_text_azul"
        android:ems="10"
        android:hint="@string/plainConfirmeSenha"
        android:inputType="textPersonName|textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSenhaRecuperar" />

    <ImageButton
        android:id="@+id/btnTrocaSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/brancoazulado"
        app:layout_constraintEnd_toEndOf="@+id/txtSenhaRecuperar"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="@+id/txtSenhaRecuperar"
        app:layout_constraintTop_toTopOf="@+id/txtSenhaRecuperar"
        app:srcCompat="@drawable/icone_olho_azul" />

    <ImageButton
        android:id="@+id/btnRedefinirSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/brancoazulado"
        app:layout_constraintEnd_toEndOf="@+id/txtConfirmeSenhaRecuperar"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toStartOf="@+id/txtConfirmeSenhaRecuperar"
        app:layout_constraintTop_toTopOf="@+id/txtConfirmeSenhaRecuperar"
        app:srcCompat="@drawable/icone_olho_azul" />

</androidx.constraintlayout.widget.ConstraintLayout>