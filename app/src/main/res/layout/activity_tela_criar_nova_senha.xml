<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brancoazulado"
    tools:context=".Tela_Criar_Nova_Senha">

    <TextView
        android:id="@+id/txtNvSenhaTitulo"
        android:layout_width="313dp"
        android:layout_height="47dp"
        android:layout_marginTop="112dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/txtNvSenhaTitulo"
        android:textColor="@color/azulescuro"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/txtNvSenhaDsc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtNvSenhaDsc"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_marginBottom="64dp"
        android:fontFamily="@font/montserrat_bold"

        android:text="@string/txtNvSenhaDsc"
        android:textColor="@color/azulescuro"
        app:layout_constraintBottom_toTopOf="@+id/editTextNvSenha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imgCadSeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icone_seta" />

    <EditText
        android:id="@+id/editTextNvSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/borda_redonda_edit_text"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/editTextNvSenha"
        app:layout_constraintBottom_toTopOf="@+id/editTextCfmSenha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.891" />

    <EditText
        android:id="@+id/editTextCfmSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="304dp"
        android:background="@drawable/borda_redonda_edit_text"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/editTextCfmSenha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCfmSenha"
        android:layout_width="219dp"
        android:layout_height="43dp"
        android:backgroundTint="@color/azulescuro"
        android:text="@string/btnCfmSenha"
        app:cornerRadius="47dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextCfmSenha" />

</androidx.constraintlayout.widget.ConstraintLayout>