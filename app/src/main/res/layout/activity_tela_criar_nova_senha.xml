<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tela_Criar_Nova_Senha">

    <TextView
        android:id="@+id/txtNvSenhaTitulo"
        android:layout_width="313dp"
        android:layout_height="47dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/txtNvSenhaTitulo"
        android:textColor="@color/azulescuro"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="115dp" />

    <TextView
        android:id="@+id/txtNvSenhaDsc"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:fontFamily="@font/mplis_bold"
        android:text="@string/txtNvSenhaDsc"

        android:textColor="@color/azulescuro"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="181dp" />

    <ImageView
        android:id="@+id/imgCadSeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icone_seta"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>