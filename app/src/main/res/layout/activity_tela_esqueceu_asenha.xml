<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_tela_esqueceu_a_senha">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/brancoazulado"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/plainEsqSenhaTitulo"
            android:layout_width="280dp"
            android:layout_height="58dp"
            android:text="@string/plainEsqSenhaTitulo"
            android:textColor="@color/azulescuro"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/plainEsqSenhaDescricao"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.081"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.857" />

        <TextView
            android:id="@+id/plainEsqSenhaDescricao"
            android:layout_width="297dp"
            android:layout_height="57dp"
            android:layout_marginTop="119dp"
            android:text="@string/plainEsqSenhaDescricao"
            android:textColor="@color/azulescuro"

            android:textColorHint="@color/azulescuro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/plainEsqSenhaTitulo"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="290dp"
                android:layout_height="60dp"
                android:background="@drawable/edit_text_equeceu_senha"
                android:ems="10"
                android:fontFamily="@font/mplusrrounded1c"
                android:gravity="fill"
                android:inputType="textPersonName"
                android:paddingStart="20dp"
                android:text="@string/plainEsqSenhaEmail"
                android:textColor="@color/brancoazuladotexto"
                android:textColorHighlight="@color/azulescuro"
                android:textColorHint="@color/azulescuro"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.379" />

            <Button
                android:id="@+id/btnEscSenha"
                android:layout_width="290dp"
                android:layout_height="60dp"
                android:layout_marginBottom="123dp"
                android:backgroundTint="@color/azulescuro"
                android:text="@string/btnEsqSenha"
                app:cornerRadius="47dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
                app:layout_constraintVertical_bias="0.17" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="248dp"
                android:text="@string/txtEscSenha"
                android:textColor="@color/azulescuro"
                app:layout_constraintEnd_toStartOf="@+id/textView2"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnEscSenha" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="248dp"
                android:text="@string/txtEscSenhaLog"
                android:textColor="@color/brancoazuladotexto"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.598"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnEscSenha" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="220dp"
                app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/icone_seta" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>